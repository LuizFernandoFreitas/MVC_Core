@model MVCBaseLayout_Crud.Models.Cliente

@{
    ViewData["SubTitle"] = "Adiciona um novo cliente";
}

<h2 class="titulo">@ViewBag.SubTitle</h2>
<hr />

<div class="card bg-light p-5">
    <form asp-controller="Home" asp-action="AdicionaCliente">
        <div class="form-group ">
            @Html.LabelFor(model => model.nome)
            <br />
            @Html.TextBoxFor(model => model.nome)
        </div>
        <div class="form-group ">
            @Html.LabelFor(model => model.telefone)
            <br />
            @Html.TextBoxFor(model => model.telefone)
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>