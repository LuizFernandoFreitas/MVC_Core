@model IEnumerable<MVCBaseLayout_Crud.Models.Cliente>

@{
    ViewData["SubTitle"] = "Clientes cadastrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.SubTitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="AdicionaCliente" class="btn btn-primary">Adicionar cliente...</a>
    </div>
</div>

<!-- Vai apresentar a lista de clientes -->
@if (Model.Count() == 0)
{
    <p>Não existe clientes.</p>
}
else
{
    <!--Lista com os clientes cadastrados -->
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
            <tr>
                <td>@cliente.nome</td>
                <td>@cliente.telefone</td>
                <td class="text-right">
                    <a asp-controller="Home" asp-action="EditarCliente" asp-route-id="@cliente.id" class="btn btn-primary"><i class="fa fa-pencil"></i> Editar</a>
                    <a asp-controller="Home" asp-action="ExcluirCliente" asp-route-id="@cliente.id" class="btn btn-primary"><i class="fa fa-trash"></i> Excluir</a>
                </td>
            </tr>
            }

        </tbody>
    </table>

    <p>Total: <b>@Model.Count()</b></p>
}

<div><a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a></div>