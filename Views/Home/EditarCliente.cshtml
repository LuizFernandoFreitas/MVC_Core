@model MVCBaseLayout_Crud.Models.Cliente

@{
    ViewData["Subtitle"] = "Editar cliente";
}

<h2 class="titulo">@ViewBag.Subtitle</h2>

<hr />

<div class="card bg-light p-5">

    <form asp-controller="Home" asp-action="EditarCliente">

        @Html.HiddenFor(model => model.id)

        <div class="form-group ">
            @Html.LabelFor(model => model.nome)
            <br />
            @Html.EditorFor(model => model.nome)
        </div>
        <div class="form-group ">
            @Html.LabelFor(model => model.telefone)
            <br />
            @Html.EditorFor(model => model.telefone)
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a asp-controller="Home" asp-action="ListaClientes" class="btn btn-primary">Cancelar</a>

    </form>

</div>

